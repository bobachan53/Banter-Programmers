<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:gravity="center"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:id="@+id/ihoioi"
            app:elevation="2dp"

            >

            <RelativeLayout
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#fff"

                >


                <ImageView
                    android:id="@+id/backButton"
                    android:layout_width="20dp"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"

                    android:src="@drawable/back_icon"
                    android:translationZ="100dp"
                    app:tint='@color/logo_bg_color'>

                </ImageView>

                <TextView
                    android:id="@+id/main_home_textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:fontFamily="@font/splinesans"
                    android:gravity="center"
                    android:letterSpacing="1"
                    android:text="EDIT PROFILE "
                    android:textAllCaps="true"
                    android:textColor="@color/logo_bg_color"
                    android:textSize="14sp"
                    android:textStyle="bold">

                </TextView>






            </RelativeLayout>


        </com.google.android.material.appbar.AppBarLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"

            android:background="@color/grey"
            >

        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:gravity="center"
            android:orientation="vertical">


            <com.makeramen.roundedimageview.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/img_profile"
                android:layout_width="87dp"
                android:layout_height="87dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:src="@drawable/profile_photo"
                app:riv_border_color="@color/logo_bg_color"
                app:riv_border_width="0dip"
                android:scaleType="centerCrop"
                app:riv_corner_radius="50dp"
                app:riv_mutate_background="true"
                app:riv_oval="false"
                android:elevation="1dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Full Name"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/splinesans"
                android:textColor="@color/black"
                >

            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/rectangle_blue_cure"
                android:orientation="horizontal"
                android:padding="10sp">
                     <EditText
                    android:id="@+id/nameEdittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10sp"
                    android:background="#00000000"
                    android:fontFamily="@font/splinesans"
                    android:hint="Name"
                    android:focusedByDefault="true"

                    android:maxLength="20"
                    android:inputType="textAutoComplete"
                    android:textColor="@color/black"
                    android:textColorHint="#9b9b9b"
                    android:textSize="15sp" />


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Email"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/splinesans"
                android:textColor="@color/black"
                >

            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/rectangle_blue_cure"
                android:orientation="horizontal"
                android:padding="10sp">
                <EditText
                    android:id="@+id/emailEdittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10sp"
                    android:background="#00000000"
                    android:fontFamily="@font/splinesans"
                    android:hint="Email"
                    android:focusedByDefault="true"

                    android:maxLength="50"
                    android:inputType="textAutoComplete"
                    android:textColor="@color/black"
                    android:textColorHint="#9b9b9b"
                    android:textSize="15sp" />


            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Address"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/splinesans"
                android:textColor="@color/black"
                >

            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/rectangle_blue_cure"
                android:orientation="horizontal"
                android:padding="10sp">
                <EditText
                    android:id="@+id/addressEdittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10sp"
                    android:background="#00000000"
                    android:fontFamily="@font/splinesans"
                    android:hint="Address"
                    android:focusedByDefault="true"

                    android:inputType="textAutoComplete"
                    android:textColor="@color/black"
                    android:textColorHint="#9b9b9b"
                    android:textSize="15sp" />


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Phone Number"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/splinesans"
                android:textColor="@color/black"
                >

            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/rectangle_blue_cure"
                android:orientation="horizontal"
                android:padding="10sp">
                <EditText
                    android:id="@+id/phoneNumberEdittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10sp"
                    android:maxLength="10"
                    android:enabled="false"
                    android:background="#00000000"
                    android:fontFamily="@font/splinesans"
                    android:hint="Phone Number"
                    android:focusedByDefault="true"

                    android:inputType="textAutoComplete"
                    android:textColor="@color/black"
                    android:textColorHint="#9b9b9b"
                    android:textSize="15sp" />


            </LinearLayout>
        </LinearLayout>
        <Button

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"

            android:id="@+id/saveChangesButton"
            android:layout_gravity="center"
            android:background="@drawable/new_yellow_square_button"
            android:fontFamily="@font/splinesans"
            android:text="Save Changes"
            app:backgroundTint="@null"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>


</ScrollView>