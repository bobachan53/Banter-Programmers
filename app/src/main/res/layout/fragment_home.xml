<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    tools:context=".fragments.HomeFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/ihoioi"
        app:elevation="2dp"


        >

        <RelativeLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/logo_bg_color"

            >

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/img_profile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"

                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:elevation="1dp"
                android:scaleType="centerCrop"
                android:src="@drawable/profile_photo"
                app:riv_border_color="@color/white"
                app:riv_border_width="1dip"
                app:riv_corner_radius="50dp"
                app:riv_mutate_background="true"
                app:riv_oval="false" />

            <TextView
                android:id="@+id/name_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="11dp"
                android:layout_toRightOf="@+id/img_profile"
                android:fontFamily="@font/splinesans_bold"
                android:text="Hi, Layla Rose"

                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/wish_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name_textview"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@+id/img_profile"
                android:fontFamily="@font/splinesans"
                android:text="Good Morning"

                android:textColor="@color/white"
                android:textSize="13sp" />


<!--            <TextView-->
<!--                android:id="@+id/main_home_textView"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_centerInParent="true"-->
<!--                android:layout_gravity="center"-->
<!--                android:fontFamily="@font/splinesans"-->
<!--                android:gravity="center"-->
<!--                android:letterSpacing="1"-->
<!--                android:text="verification "-->
<!--                android:textAllCaps="true"-->
<!--                android:textColor="@color/logo_bg_color"-->
<!--                android:textSize="14sp"-->
<!--                android:textStyle="bold">-->

<!--            </TextView>-->

            <ImageView
                android:id="@+id/search_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:layout_marginTop="8dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/qr_icon"
                android:padding="2dp"
                android:src="@drawable/search_icon"
                app:tint="@color/white" />


            <ImageView
                android:id="@+id/qr_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:layout_marginTop="8dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/icon"
                android:padding="2dp"
                android:src="@drawable/qr_code_scan"
                app:tint="@color/white" />




            <ImageView
                android:id="@+id/icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginTop="8dp"
                android:layout_marginRight="10dp"
                android:padding="2dp"
                android:src="@drawable/alert_icon"
                app:tint="@color/white" />

            <com.nex3z.notificationbadge.NotificationBadge
                android:id="@+id/badge"
                android:layout_width="28dp"
                android:layout_height="28dp"

                android:layout_alignParentRight="true"
                android:layout_marginTop="3dp"
                android:layout_marginRight="3dp"



                app:nbMaxTextLength="2" />




        </RelativeLayout>


    </com.google.android.material.appbar.AppBarLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"

        android:background="@color/grey"
        >

    </View>

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_textview"
        android:layout_gravity="center"

        android:layout_marginTop="4dp"
        android:layout_toRightOf="@+id/img_profile"
        android:fontFamily="@font/splinesans"
        android:text="Available Balance"
        android:textAllCaps="true"
        android:letterSpacing="0.1"

        android:textColor="@color/black"
        android:textSize="13sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <androidx.cardview.widget.CardView
            android:id="@+id/topup_cardview"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"


            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="3dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp">


                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/add_button"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentTop="true"

                    android:layout_centerInParent="true"
                    android:layout_gravity="center"


                    android:scaleType="fitXY"
                    android:src="@drawable/add_icon"
                    app:riv_border_color="@color/white"
                    app:riv_border_width="1dip"
                    app:riv_corner_radius="50dp"
                    app:riv_mutate_background="true"
                    app:riv_oval="false" />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:fontFamily="@font/splinesans"
                    android:gravity="center"
                    android:text="TOP UP"
                    android:textColor="@color/black"


                    android:textSize="13sp"
                    android:textStyle="bold" />
            </RelativeLayout>


        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/wallet_balancetextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/splinesans_bold"
            android:text="$55888"
            android:textColor="@color/black"
            android:textSize="36dp" />


        <androidx.cardview.widget.CardView
            android:id="@+id/pay_cardview"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"

            android:layout_marginRight="10dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="3dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp">


                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/send_button"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentTop="true"

                    android:layout_centerInParent="true"
                    android:layout_gravity="center"


                    android:scaleType="fitXY"
                    android:src="@drawable/send_icon"
                    app:riv_border_color="@color/white"
                    app:riv_border_width="1dip"
                    app:riv_corner_radius="50dp"
                    app:riv_mutate_background="true"
                    app:riv_oval="false" />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:fontFamily="@font/splinesans"
                    android:gravity="center"
                    android:text="PAY"
                    android:textColor="@color/black"


                    android:textSize="13sp"
                    android:textStyle="bold" />
            </RelativeLayout>


        </androidx.cardview.widget.CardView>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/grey"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >

    </View>


</LinearLayout>